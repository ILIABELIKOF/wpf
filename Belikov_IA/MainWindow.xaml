<Window x:Class="Belikov_IA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Belikov_IA"
        mc:Ignorable="d"
    Title="Авторизация" Height="480" Width="800" SizeToContent="WidthAndHeight">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0C0C17" Offset="0"/>
            <GradientStop Color="#1A1A2E" Offset="0.5"/>
            <GradientStop Color="#16213E" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2A2A2A" Offset="0"/>
                        <GradientStop Color="#1A1A1A" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#FF4444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#FF4444"/>
            <Setter Property="BorderBrush" Value="#FF4444"/>
            <Setter Property="CaretBrush" Value="#FF4444"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#FF4444"/>
            <Setter Property="BorderBrush" Value="#FF4444"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FF4444" Offset="0"/>
                        <GradientStop Color="#CC0000" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#660000"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF4444"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid>


        <Border Margin="100,0,100,0" Padding="30" VerticalAlignment="Center" Height="359">
            <StackPanel>
                <TextBlock Text="Авторизация "  FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"
                      Foreground="#FF4444" FontWeight="Black" FontFamily="Impact"/>

                <Border Padding="15" Margin="0,10" Height="229">
                    <StackPanel>
                        <TextBlock Text="Логин:" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtUsername" Height="30" Margin="0,0,0,15"/>

                        <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="txtPassword" Height="30" Margin="0,0,0,20"/>

                        <Button x:Name="LoginButton" Content="ВОЙТИ" Height="35" Click="LoginButton_Click"
                           FontSize="14" IsDefault="True"/>

                        <!-- Новая кнопка для управляющего -->
                        <Button x:Name="ManagerLoginButton" Content="ВОЙТИ КАК МЕНЕДЖЕР" 
                            Height="18" Click="ManagerLoginButton_Click"
                            FontSize="12" Margin="0,10,0,0"
                            Background="#533483"
                            BorderBrush="#E94560" Width="142"
                                />

                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        
    </Grid>


</Window>

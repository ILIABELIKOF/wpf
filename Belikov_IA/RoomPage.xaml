<Page x:Class="Belikov_IA.RoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Belikov_IA"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Комната">

    <Grid Margin="-76,0,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid Name="RoomsDataGrid" AutoGenerateColumns="False" Grid.Row="1" Background="Gray" Margin="10,0,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Этаж" Binding="{Binding floor}" Width="100" />
                <DataGridTextColumn Header="Номер" Binding="{Binding room}" Width="150"/>
                <DataGridTextColumn Header="Категория номера" Binding="{Binding room_category}" Width="200"/>
                <DataGridTextColumn Header="Цена за ночь" Binding="{Binding night_price}" Width="200"/>
                <DataGridTextColumn Header="Статус номера" Binding="{Binding room_status}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
        <!--<StackPanel  Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="1" Background="Gray" Margin="339,255,0,49" Width="151" RenderTransformOrigin="1.527,0.27">
            <Button  Content="Обновить" Height="50" Width="150" Cursor="Hand" Click="refreshButtonClicked" Background="LightGray"/>
        </StackPanel>-->
    </Grid>
</Page>

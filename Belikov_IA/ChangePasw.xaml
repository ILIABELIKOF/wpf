<Window x:Class="Belikov_IA.ChangePasw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Belikov_IA"
        mc:Ignorable="d"
        Title="Изменение пароля" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0C0C17" Offset="0"/>
            <GradientStop Color="#1B1B2F" Offset="0.3"/>
            <GradientStop Color="#16213E" Offset="0.7"/>
            <GradientStop Color="#0F3460" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E94560"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="#E94560"/>
            <Setter Property="BorderBrush" Value="#E94560"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#E94560" Offset="0"/>
                        <GradientStop Color="#CC0000" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#660000"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="289*"/>
            <ColumnDefinition Width="471*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   FontSize="24"
                   FontWeight="Black"
                   Foreground="#FF4444"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,30"
                   FontFamily="Impact">
            <Run Text="СМЕНА ПАРОЛЯ"/>
        </TextBlock>

        <!-- Поля ввода паролей -->
        <StackPanel Grid.Row="1" Grid.Column="1" 
                    VerticalAlignment="Top"  
                    Width="390" 
                    HorizontalAlignment="Left" 
                    Margin="20,0,0,0">
            <TextBlock Text="СТАРЫЙ ПАРОЛЬ" FontSize="14"/>
            <PasswordBox x:Name="txtOldPassword"/>

            <TextBlock Text="НОВЫЙ ПАРОЛЬ" FontSize="14"/>
            <PasswordBox x:Name="txtNewPassword"/>


            <TextBlock Text="ПОДТВЕРЖДЕНИЕ ПАРОЛЯ" FontSize="14"/>
                <PasswordBox x:Name="txtAcceptNewPassword"/>
        </StackPanel>

        <!-- Кнопка Изменить -->
        <Button Grid.Row="2" Grid.ColumnSpan="2"
                Content="ИЗМЕНИТЬ"
                Width="150"
                Height="40"
                FontSize="14"
                HorizontalAlignment="Center"
                Margin="0,20,0,10"
                Click="ChangeButton_Click"
                IsDefault="True"/>
    </Grid>
</Window>

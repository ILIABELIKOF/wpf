<Window x:Class="Belikov_IA.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Belikov_IA"
        mc:Ignorable="d"
        Title="Добавление пользователя" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5">
            <GradientStop Color="#1A1A2E" Offset="0"/>
            <GradientStop Color="#16213E" Offset="0.5"/>
            <GradientStop Color="#0F3460" Offset="0.8"/>
            <GradientStop Color="#533483" Offset="1"/>
        </RadialGradientBrush>
    </Window.Background>

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E94560"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="#E94560"/>
            <Setter Property="BorderBrush" Value="#E94560"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="#E94560"/>
            <Setter Property="BorderBrush" Value="#E94560"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#E94560" Offset="0"/>
                        <GradientStop Color="#CC0000" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#660000"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="#991F1F3B" Margin="40" Padding="25" CornerRadius="12"
                BorderBrush="#E94560" BorderThickness="2">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="ДОБАВЛЕНИЕ ПОЛЬЗОВАТЕЛЯ" 
                          FontSize="18" FontWeight="Black" HorizontalAlignment="Center" 
                          Margin="0,0,0,20" Foreground="#FF4444" FontFamily="Impact"/>

                <!-- Имя -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя:"/>
                <TextBox x:Name="txtFirstName" Grid.Row="1" Grid.Column="1"/>

                <!-- Фамилия -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Фамилия:"/>
                <TextBox x:Name="txtLastName" Grid.Row="2" Grid.Column="1"/>

                <!-- Логин -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Логин:"/>
                <TextBox x:Name="txtUserName" Grid.Row="3" Grid.Column="1"/>

                <!-- Пароль -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Пароль:"/>
                <TextBox x:Name="txtPassword" Grid.Row="4" Grid.Column="1"/>

                <!-- Роль -->
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Роль:"/>
                <ComboBox x:Name="cmbRole" Grid.Row="5" Grid.Column="1">
                    <ComboBoxItem Content="администратор"/>
                    <ComboBoxItem Content="менеджер"/>
                    <ComboBoxItem Content="сотрудник"/>
                </ComboBox>

                <!-- Кнопки -->
                <StackPanel Grid.Row="12" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="btnAdd" Content="ДОБАВИТЬ" Width="150" Click="BtnAdd_Click" IsDefault="True"/>
                    <Button x:Name="btnCancel" Content="ОТМЕНА" Width="100" Click="BtnCancel_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

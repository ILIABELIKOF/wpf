<Page x:Class="Belikov_IA.BookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Belikov_IA"
      mc:Ignorable="d"
      Title="Бронирования" Height="410" Width="803">

    <Page.Resources>
        <!-- Стили как в других окнах -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="#E94560"/>
            <Setter Property="BorderBrush" Value="#E94560"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="#2A2A2A"/>
            <Setter Property="AlternatingRowBackground" Value="#333333"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#E94560"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E94560"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="ИНФОРМАЦИЯ О БРОНИРОВАНИЯХ"
                   Grid.Row="0"
                   FontSize="16"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"
                   Foreground="#E94560"/>

        <!-- DataGrid -->
        <DataGrid Name="BookingDataGrid" 
                  AutoGenerateColumns="False" 
                  Grid.Row="1"
                  IsReadOnly="True"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID комнаты" Binding="{Binding room_id}" Width="80"/>
                <DataGridTextColumn Header="Имя гостя" Binding="{Binding guest_first_name}" Width="120"/>
                <DataGridTextColumn Header="Фамилия гостя" Binding="{Binding guest_last_name}" Width="120"/>
                <DataGridTextColumn Header="Дата заезда" Binding="{Binding check_in_date, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Дата выезда" Binding="{Binding check_out_date, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Цена проживания" Binding="{Binding stay_price}" Width="120"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Информационная панель -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <TextBlock Text="Всего бронирований: " Foreground="White" FontFamily="Consolas"/>
            <TextBlock x:Name="BookingCount" Text="0" Foreground="#E94560" FontFamily="Consolas" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>

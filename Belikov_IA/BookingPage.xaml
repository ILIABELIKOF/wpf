<Page x:Class="Belikov_IA.BookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Belikov_IA"
      mc:Ignorable="d"
      Title="Бронирования" Height="410" Width="803">
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0C0C17" Offset="0"/>
            <GradientStop Color="#1A1A2E" Offset="0.5"/>
            <GradientStop Color="#16213E" Offset="1"/>
            <!-- Blue Violet -->
        </LinearGradientBrush>
    </Page.Background>
    <Grid Height="410" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="800*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid Name="GuestsDataGrid" AutoGenerateColumns="False" Background="Transparent" Height="420" VerticalAlignment="Top" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding name}" Width="100" />
                <DataGridTextColumn Header="Фамилия" Binding="{Binding last_name}" Width="100"/>
                <DataGridTextColumn Header="Номер проживания" Binding="{Binding room_number}" Width="120"/>
                <DataGridTextColumn Header="Дата въезда" Binding="{Binding enter_date}" Width="90"/>
                <DataGridTextColumn Header="Дата выезда" Binding="{Binding leave_date}" Width="90"/>
                <DataGridTextColumn Header="Стоимость проживания" Binding="{Binding price}" Width="150"/>
                <DataGridTextColumn Header="Статус проживания" Binding="{Binding status}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
        <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Background="Gray" Width="780">
            <Button  Content="Добавить бронирование" Height="50" Width="150" Cursor="Hand" Click="addReserveClicked" Background="LightGray"/>
            <Button  Content="Удалить бронирование" Height="50" Width="150" Cursor="Hand" Click="deleteReserveClicked" Margin="10, 0, 10, 0" Background="LightGray"/>
        </StackPanel>-->
    </Grid>
</Page>
